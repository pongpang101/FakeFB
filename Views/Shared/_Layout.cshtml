<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMjD3g8eL3WmYZUftZ7jjI/5g7/rc5z0Zg4sK" crossorigin="anonymous" />
    <style>
        body {
            background-color: #f0f2f5; /* Facebook-like background */
        }

        .navbar {
            background-color: #4267B2; /* Facebook blue */
        }

            .navbar a {
                color: white !important; /* Ensure all links are white */
            }

        .sidebar {
            background-color: white;
            border-right: 1px solid #ddd;
            height: 100vh; /* Full height */
            position: fixed; /* Fix position */
            overflow-y: auto; /* Scroll if needed */
            width: 250px; /* Fixed width */
        }

        .content {
            margin-left: 250px; /* Space for sidebar */
            padding: 20px;
        }

        .search-input {
            width: 300px; /* Adjust as needed */
        }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <!-- Left Side: Logo and Search -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" href="/Home/Index">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <form class="mx-2" method="get" action="/Search" style="display: inline;">
                        <button type="submit" class="btn btn-link text-white" aria-label="Search">
                            <i class="fas fa-search"></i>
                        </button>
                        <input type="search" name="query" placeholder="Search..." aria-label="Search" class="form-control" style="display: none;">
                    </form>
                </div>

                <!-- Center: Navigation Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Videos"><i class="fas fa-video"></i> Videos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Marketplace"><i class="fas fa-store"></i> Marketplace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Groups"><i class="fas fa-users"></i> Groups</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Games"><i class="fas fa-gamepad"></i> Games</a>
                        </li>
                    </ul>
                </div>

                <!-- Right Side: Categories, Chats, Notifications, Profile -->
                <div class="d-flex align-items-center">
                    <a class="nav-link text-white" href="/Categories">
                        <i class="fa-solid fa-list"></i> Categories
                    </a>
                    <a class="nav-link text-white" href="/Chats">
                        <i class="fas fa-comments"></i> Chats
                    </a>
                    <a class="nav-link text-white" href="/Notifications">
                        <i class="fas fa-bell"></i> Notifications
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle text-white" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i> Profile
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="dropdown-item">Log Out<i class="fas fa-sign-out-alt"></i></button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            You are NOT logged in.
        </div>
    }

    <div class="content">
        @RenderBody()
    </div>

    <section>
        @RenderSection("Scripts", required: false)
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/10b9a63a3e.js" crossorigin="anonymous"></script>
</body>
</html>
